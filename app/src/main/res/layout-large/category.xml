<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/darkpink"
        android:minHeight="?actionBarSize">

        <ImageView
            android:id="@+id/leftcategory"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/goback"
            android:src="@drawable/left_filled" />

        <TextView
            android:id="@+id/textviewcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/Text"
            android:textColor="#ffffff"
            android:textSize="40sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/Personality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/personality"
            android:textColor="@color/personality"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/Sports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sports"
            android:textColor="@color/sports"
            android:textSize="26sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:contentDescription="@string/personality"
            android:src="@drawable/personalityfinal" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/image1"
            android:layout_toRightOf="@id/image1"
            android:contentDescription="@string/sports"
            android:src="@drawable/sportsfinal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/Geography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/geography"
            android:textColor="@color/geography"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/Science"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/science"
            android:textColor="@color/science"
            android:textSize="26sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:contentDescription="@string/geography"
            android:src="@drawable/geographyfinal" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/image3"
            android:layout_toRightOf="@id/image3"
            android:contentDescription="@string/science"
            android:src="@drawable/sciencefinal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/Arts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_weight="1"
            android:text="@string/arts_gk"
            android:gravity="center"
            android:textColor="@color/arts"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/Entertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_weight="1"
            android:gravity="center"
            android:text="@string/entertainment"
            android:textColor="@color/entartenment"
            android:textSize="26sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image5"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:contentDescription="@string/arts_gk"
            android:src="@drawable/artistfinal" />

        <ImageView
            android:id="@+id/image6"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/image5"
            android:layout_toRightOf="@id/image5"
            android:contentDescription="@string/entertainment"
            android:src="@drawable/entertainmentfinal" />

    </RelativeLayout>

</LinearLayout>